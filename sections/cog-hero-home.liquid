<section class="cog_home_hero" style="background-image:url('{{ section.settings.cog_home_img | img_url: 'master' }}');">
    {% if section.settings.cog_home_logo %}
    <div class="frow centered">
        <div class="cog_home_img"><img src="{{ section.settings.cog_home_logo | img_url: 'master' }}" /></div>
    </div>
    {% endif %}
</section>

{% schema %}
{
    "name": "COG Hero",
    "settings": [
        {
            "type": "image_picker",
            "id": "cog_home_img",
            "label": "COG Home Hero"
        },
        {
            "type": "image_picker",
            "id": "cog_home_logo",
            "label": "COG Home Logo"
        }
    ]
}
{% endschema %}