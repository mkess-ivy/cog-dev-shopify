<section class="cog_newsletter">
    <div class="frow justify-between">
        <div class="cog_newsletter_title">{{ section.settings.cog_newsletter_text }}</div>
        <div class="cog_newsletter_group">
            <!-- Begin Mailchimp Signup Form -->
            <link href="//cdn-images.mailchimp.com/embedcode/horizontal-slim-10_7.css" rel="stylesheet" type="text/css">
            <style type="text/css">
                #mc_embed_signup{background:#fff; clear:left; font:14px Helvetica,Arial,sans-serif; width:100%;}
                /* Add your own Mailchimp form style overrides in your site stylesheet or in this style block.
                We recommend moving this block and the preceding CSS link to the HEAD of your HTML file. */
                #mc_embed_signup .button {
                    background: #000;
                    margin-left: 20px;
                }
                #mc_embed_signup input.email {
                    border-left:0;
                    border-right:0;
                    border-top:0;
                    border-radius: 0;
                    border-bottom: 1px solid #000;
                    color: #000;
                }
                
            </style>
            <div id="mc_embed_signup">
                <form action="https://cityofgodshop.us2.list-manage.com/subscribe/post?u=704c071c53b97f04c098754eb&amp;id=c637ff95d6" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                    <div id="mc_embed_signup_scroll">
                        <div class="frow justify-start">
                            <div>   
                                <input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="email address" required>
                                <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                            </div>
                            <div style="position: absolute; left: -5000px;" aria-hidden="true">
                                <input type="text" name="b_704c071c53b97f04c098754eb_c637ff95d6" tabindex="-1" value="">
                            </div>
                            <div class="">
                                <input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <!--End mc_embed_signup-->
        </div>
    </div>
    
</section>

{% schema %}
{
    "name": "COG Newsletter",
    "settings": [
        {
            "type": "text",
            "id": "cog_newsletter_text",
            "label": "COG Newsletter Text"
        }
    ]
}
{% endschema %}