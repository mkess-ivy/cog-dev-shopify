<section class="cog_home_hero" style="background-image:url('{{ section.settings.cog_home_img | img_url: 'master' }}');">
    <div class="frow centered">
        <div class="cog_page_title">{{section.settings.cog_press_title}}</div>
    </div>
</section>

<section class="cog_page_section_title">
    <div class="cog_page_description">{{section.settings.cog_press_desc}}</div>
</section>

{% schema %}
{
    "name": "COG Hero",
    "settings": [
        {
            "type": "image_picker",
            "id": "cog_home_img",
            "label": "COG Home Hero"
        },
        {
            "type": "text",
            "id": "cog_press_title",
            "label": "Press Page Title"

        },
        {
            "type": "textarea",
            "id": "cog_press_desc",
            "label": "Press Page Description"
        }
    ]
}
{% endschema %}